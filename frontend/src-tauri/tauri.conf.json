{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Titier",
  "version": "0.5.1",
  "identifier": "com.titier.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Titier",
        "width": 1280,
        "height": 800,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "sidecars/titier-backend"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}